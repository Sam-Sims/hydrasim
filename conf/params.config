def trace_timestamp = new java.util.Date().format( 'yyyy-MM-dd_HH-mm-ss')


params {
    // Max resource options
    // Defaults only, expecting to be overwritten
    max_memory = '10.GB'
    max_cpus = 4
    max_time = '240.h'

    store_dir = "store_dir"
    unique_id = null
    timestamp = "${trace_timestamp}"

    // simulate datasets
    dataset_coverage = "10k"
    lookup = ["illumina": "wgsim", "ont": "badread"]
    output_dir = "output" // Output directory

    // Generate Recipes parameters
    reference_csv = null
    reference_dir = "store/references"

    dataset_csv = ""
    dataset_index = "public_database_accession"
    dataset_dir = "store/datasets"

    read_types = ["illumina","ont"]
    coverages = [0.1, 1, 10, 100]
    num_iterations = 1

    paired = null
    unpaired = null

    tracedir = "${params.outdir}/pipeline_info/${trace_timestamp}"
    // Read simulator params (default settings provided)
    badread_args = "--length 15000,13000 --identity 95,99,2.5 --error_model nanopore2023 --qscore_model nanopore2023 --junk_reads 1 --random_reads 1 --chimeras 1 --glitches 10000,25,25"
    wgsim_args = "-1 150 -2 150 -r 0.001 -R 0.15"
    

}
